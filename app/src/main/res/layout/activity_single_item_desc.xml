<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.task1.SingleItemDesc"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="386dp"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/product1"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:padding="10dp"
        android:src="@drawable/s1_mob1"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:weightSum="8">

        <ImageView
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:background="@drawable/image_background_dark"
            android:src="@drawable/lenova4"/>
        <ImageView
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:background="@drawable/image_background_dark"
            android:src="@drawable/lenova3"/>

        <ImageView
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:background="@drawable/image_background_dark"
            android:src="@drawable/lenova2"/>

        <ImageView
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:background="@drawable/image_background_dark"
            android:src="@drawable/lenova5"/>


    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        >

        <TextView
            android:id="@+id/productName1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:text="MobileName"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/modelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:text="model"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:text="Special Price"
                android:textColor="#168423"
                android:textAlignment="viewStart"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ends in few hours"
                android:textAlignment="viewStart"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:layout_marginLeft="25dp">

        <TextView
            android:id="@+id/prize"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="\u20B9 7,499"
            android:textAlignment="viewStart"
            android:textColor="@color/TextDark"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/productMode2"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="11% off"
            android:textColor="#168423"
            android:textAlignment="viewStart"
            android:textSize="15dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fassured"
            android:paddingBottom="15dp"
            android:paddingRight="100dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp">
        <TextView
            android:id="@+id/rating"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:text="3.8"
            android:textSize="15dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:background="@drawable/rating_corner"
            android:drawableRight="@drawable/ic_star_border_black_24dp"/>
        <TextView
            android:id="@+id/ratingInWords"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="120 ratings &amp; 29 reviews"
            android:textAlignment="viewStart"
            android:gravity="center"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="#f2f0f0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@android:color/white"
                android:text="@string/AddToCart"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@android:color/white"
                android:text="@string/BuyNow"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
</ScrollView>
