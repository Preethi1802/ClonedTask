<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.task1.SingleItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="386dp"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/product1"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="8">

                <ImageView
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/image_background_dark"
                    android:padding="3dp"
                    android:src="@drawable/lenova4" />

                <ImageView
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/image_background_dark"
                    android:padding="3dp"
                    android:src="@drawable/lenova3" />

                <ImageView
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/image_background_dark"
                    android:padding="3dp"
                    android:src="@drawable/lenova2" />

                <ImageView
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/image_background_dark"
                    android:padding="3dp"
                    android:src="@drawable/lenova5" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName1"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="MobileName"
                android:textAlignment="viewStart"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/modelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="model"
                android:textAlignment="viewStart"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Special Price"
                    android:textAlignment="viewStart"
                    android:textColor="#168423" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Ends in few hours"
                    android:textAlignment="viewStart" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <TextView
                android:id="@+id/prize"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:text="\u20B9 9999"
                android:textAlignment="viewStart"
                android:textColor="@color/TextDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productMode2"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="11% off"
                android:textAlignment="viewStart"
                android:textColor="#168423"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="100dp"
                android:src="@drawable/f_assured" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rating"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/rating_corner"
                android:drawableRight="@drawable/ic_star_border_black_24dp"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:paddingLeft="5dp"
                android:text="3.8"
                android:textAlignment="viewStart"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/ratingInWords"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="120 ratings &amp; 29 reviews"
                android:textAlignment="viewStart" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#f2f0f0"
                android:orientation="horizontal"
                android:weightSum="10">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="5"
                    android:background="@android:color/white"
                    android:text="@string/AddToCart" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="5"
                    android:background="@android:color/white"
                    android:text="@string/BuyNow" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
